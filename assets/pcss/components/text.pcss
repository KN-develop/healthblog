/* Переменые */
:root {
  --text-scale-ratio: env(--max-font-scale-ratio);

  /* На меньшей ширине экрана уменьшаем шаг, чтобы минимальный шрифт не был нечитаемым */
  @media (--less-than-l) {
    --text-scale-ratio: calc(env(--max-font-scale-ratio) * 1.01);
  }

  /* Размеры шрифтов */
  --text-xxxl: env(--max-font-size);
  --text-xxl: calc(var(--text-xxxl) * var(--text-scale-ratio));
  --text-xl: calc(var(--text-xxl) * var(--text-scale-ratio));
  --text-l: calc(var(--text-xl) * var(--text-scale-ratio));
  --text-m: calc(var(--text-l) * var(--text-scale-ratio));
  --text-s: calc(var(--text-m) * var(--text-scale-ratio));
  --text-xs: calc(var(--text-s) * var(--text-scale-ratio));

  /* Заголовки */
  --h1-font-size: var(--text-xxxl);
  --h2-font-size: var(--text-xxl);
  --h3-font-size: var(--text-xl);
  --h4-font-size: var(--text-l);
  --h5-font-size: var(--text-m);
  --h6-font-size: var(--text-s);
}

/* Заголовки */
body {
  font-size: var(--text-s);
}

/* Заголовки */
h1 {
  font-size: var(--h1-font-size);
}
